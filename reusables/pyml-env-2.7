
#include "python-dev-2.7"

RUN apt-get update && \\
    apt-get install -y --no-install-recommends \\
        build-essential \\
        libblas-dev \\
        libbz2-dev \\
        liblapack-dev && \\
    rm -rf /var/lib/apt/lists && \\
    mkdir /var/lib/apt/lists

RUN pip install --upgrade pip && \\
    pip install --no-cache-dir \\
        ipython[all] \\
        jupyter \\
        matplotlib \\
        nose \\
        numpy \\
        pandas \\
        scikit-learn \\
        scipy \\
        sklearn
