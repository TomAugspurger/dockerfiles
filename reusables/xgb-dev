
#include "pyml-env-2.7"

RUN apt-get update && \\
    apt-get install -y --no-install-recommends \\
        git \\
        cmake \\
        make \\
        tar \\
        unzip \\
        wget && \\
    rm -rf /var/lib/apt/lists && \\
    mkdir /var/lib/apt/lists

