#ifndef __XGB_DEV__
#define __XGB_DEV__

#include "pyml-env-2.7"

RUN apt-get update && \\
    apt-get install -y --no-install-recommends \\
        cmake \\
        git \\
        make \\
        tar \\
        unzip \\
        wget && \\
    rm -rf /var/lib/apt/lists && \\
    mkdir /var/lib/apt/lists

COPY contexts/dev-xgb /opt/dev-xgb

ENV PATH=/opt/dev-xgb:$PATH

#endif // __XGB_DEV__
