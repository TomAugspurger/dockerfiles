#ifndef __PYTORCH__
#define __PYTORCH__

#include "common-utils.h"

#ifndef PT_ARCH
#define PT_ARCH 3.5 5.2 6.0 6.1+PTX
#endif
#define PT_ARCH_STR STR(PT_ARCH)

RUN apt-get update && \\
    apt-get install -y --no-install-recommends \\
        build-essential \\
        cmake \\
        git \\
        curl \\
        ca-certificates \\
        libjpeg-dev \\
        libpng-dev \\
        lsb-release \\
        curl \\
        wget && \\
    rm -rf /var/lib/apt/lists && \\
    mkdir /var/lib/apt/lists

RUN curl -o /miniconda.sh -O "https://repo.continuum.io/miniconda/Miniconda3-4.2.12-Linux-x86_64.sh" && \\
    chmod +x /miniconda.sh && \\
    /miniconda.sh -b -p /opt/conda && \\
    rm /miniconda.sh

ENV PATH /opt/conda/bin:$PATH

RUN conda install \\
        conda-build \\
        cudnn \\
        python=3.5.2 \\
        gcc \\
        ipython \\
        jupyter \\
        matplotlib \\
        mkl \\
        nccl \\
        numpy \\
        pandas \\
        pyyaml \\
        scikit-learn \\
        scipy \\
        urllib3 && \\
    conda install -c soumith magma-cuda80 && \\
    conda clean -ya && \\
    pip install --no-cache-dir cffi \\
        cmake

RUN git clone --recursive "https://github.com/pytorch/pytorch" /opt/pytorch

// in case of a specific commit id to be used!
#ifdef PT_COMMIT_ID
RUN cd /opt/pytorch && \\
    git reset --hard PT_COMMIT_ID && \\
    git submodule update --init
#endif

RUN conda install \\
        mkl-include \\
        typing && \\
    conda clean -ya

RUN cd /opt/pytorch && \\
    pip install --no-cache-dir -r requirements.txt && \\
    TORCH_CUDA_ARCH_LIST=PT_ARCH_STR \\
        TORCH_NVCC_FLAGS="-Xfatbin -compress-all" \\
        CMAKE_PREFIX_PATH="$(dirname $(which conda))/../" \\
        pip install -v .

RUN git clone "https://github.com/pytorch/vision.git" /opt/vision && \\
        cd /opt/vision && \\
        pip install -v .

// to reduce docker image size
RUN rm -rf /opt/pytorch /opt/vision

#endif // __PYTORCH__
